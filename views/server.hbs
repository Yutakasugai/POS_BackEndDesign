            <!-- Customer Number Panel -->
            <div class="customerCheck_add">
                <h1>Customer: </h1>

                <div id="add_button_wrapper">
                    <button id="add_button_decrease">-</button>
                    <h1 id="add_counter">0</h1>
                    <button id="add_button_increase">+</button>
                </div>

            </div>

            <!-- Cancel and Confirm Button -->
            <div class="add_button-container">
                <button id="back-btn">Back</button>

                {{!-- Next Btn --}}
                <form action="/auth/user/addItem" method="POST">
                    <input type="hidden" name="userName" value="{{name}}">
                    <input type="hidden" name="date_key" value="{{Date}}">
                    <input type="hidden" name="time_key" value="{{Time}}">
                    <input type="hidden" id="c_number" name="c_number">
                    <button type="submit" id="next-btn" name="table_key">Next</button>
                </form>

            </div>

        </div>
    </div>
</div>

<!-- Close Btn Modal -->
<div class="closeBtn-modal" id="closeBtn-modal">
    <div class="modal-content-closeBtn">
    
        <span class="close-btn-closeBtn">&times;</span>

        <!-- close modal inside -->
        <div class="table-closeBox">

            <h1>Are you sure to finish and leave?</h1>
            
            <!-- Yes or No Buttons -->
            <div class="close_button-container">
                <button id="no-btn">No</button>
                <button id="yes-btn">Yes</button>
