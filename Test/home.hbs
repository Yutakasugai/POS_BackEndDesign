<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/Server-Side/server_addPage.css">
    <title>Document</title>
</head>
<body>
    <h1>Add Page</h1>
    <h2>User Name: {{name}}</h2>
    <h2>Date: {{Date}}</h2>
    <h2>Time: {{Time}}</h2>

    <div id="add-item">
        <form action="/auth/user/addBtn" method="POST">       
            {{#each items}}
                <div class="item_container">
                    <input type="checkbox" value="{{item}},{{price}}" id="item_{{id}}" name="select_item">
                    <label for="{{id}}">{{item}}</label>
                </div>
            {{/each}}
            
            <input type="hidden" name="userName" value="{{name}}">
            <input type="hidden" name="date_key" value="{{Date}}">
            <input type="hidden" name="time_key" value="{{Time}}">
            <button name="table_key" value="{{table_key}}">Add</button>
        </form>
    </div>

    <button class="check-btn">Check</button>

    {{#if errorMsg}}
        <h4>{{errorMsg}}</h4>
    {{/if}}

    <!-- Pop up menu for Log in -->
    <div class="modal" id='check-modal'>

        <!-- This is a class for all of this modal functions -->
        <div class="modal-content">

            <!-- This is to close the SignUp page by clicking anywhere on the main page -->
            <span class="close-btn">&times;</span>

            <div class="check_items">

                {{#if check_msg}}
                    <h4>{{check_msg}}</h4>
                {{else}}
                
                    <form action="/auth/user/addSubmit" method="POST">
                        {{#each check_items}}
                            <div class="items_list">
                                <input type="checkbox" value="{{item_name}},{{item_price}}" id="item_{{id}}" name="select_checkItem">
                                <label for="{{id}}">{{item_name}}</label>
                            </div>
                        {{/each}}

                        <input type="hidden" name="userName" value="{{name}}">
                        <input type="hidden" name="date_key" value="{{Date}}">
                        <input type="hidden" name="time_key" value="{{Time}}">
                        <button>Submit</button>
                    </form>
                {{/if}}   
            </div>
        </div>
    </div>

    <br><br>
    {{!-- Back user to Home --}}
    <form action="/auth/user/addHome" method="POST">

        {{!-- Top tab datas --}}
        <input type="hidden" name="userName" value="{{name}}">
        <input type="hidden" name="date_key" value="{{Date}}">
        <input type="hidden" name="time_key" value="{{Time}}">

        <button>Home</button>
    </form>

    <script type="text/javascript" src="/js/Server-Side/addPage_modal.js"></script>

</body>
</html>